<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_bar_bg_color"
    android:padding="@dimen/padding">

    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/half_padding"
        android:gravity="center"
        android:textSize="@dimen/title_bar_font_size"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:shadowDx="1.1"
        android:shadowDy="1.1"
        android:shadowRadius="1.3"
        android:ellipsize="end"
        android:text="@string/login_string"/>

    <ImageView android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:padding="@dimen/half_padding"
        android:gravity="center"
        android:id="@+id/left_view"/>

    <ProgressBar android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:visibility="gone"
        style="android:progressBarStyleSmall"
        android:indeterminateDrawable="@drawable/progress"
        android:id="@+id/login_title_progressbar"/>

</FrameLayout>